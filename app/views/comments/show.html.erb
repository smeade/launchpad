<div class="page-header">
  <%= link_to comments_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_comment_path(@comment), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>comment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Post:</dt>
  <dd><%= @comment.post %></dd>

  <dt>User:</dt>
  <dd><%= @comment.user %></dd>

  <dt>Body:</dt>
  <dd><%= @comment.body %></dd>

</dl>

<%= link_to 'Delete', @comment, class: 'delete-btn text-muted', method: :delete, data: { confirm: 'Are you sure?' } %>
