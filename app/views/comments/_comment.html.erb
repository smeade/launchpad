<div id='comment-<%= comment.id %>' class='comment'>
  <small>
    <%= comment.created_at.to_s(:long) %>
    by
    <%= comment.user.try(:email) %>
    at
    <%= comment.try(:region_name) %>
  </small>
  <span class="btn btn-default btn-sm edit-comment glyphicon glyphicon-pencil pull-right"  style='display: none;'></span>
  <p class='comment-body'>
    <%= comment.body %>
  </p>
  <div class='comment-edit' style='display: none;'>
    <%= form_for(comment, remote: true, :html => { :class => "form-horizontal" }) do |f| %>
      <%= f.text_area :body, id: "comment-body-#{comment.id}", :class => "form-control" %>
      <br/>
      <%= f.submit :class => "btn btn-primary" %>
    <% end %>
  </div>
  <br/>
</div>
