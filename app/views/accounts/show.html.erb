<div class="page-header">
  <%= link_to accounts_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_account_path(@account), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>account</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @account.user %></dd>

  <dt>Name:</dt>
  <dd><%= @account.name %></dd>

  <dt>Subdomain:</dt>
  <dd><%= @account.subdomain %></dd>

</dl>

<%= link_to 'Delete', @account, class: 'delete-btn text-muted', method: :delete, data: { confirm: 'Are you sure?' } %>
